<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Barbara Oakley's Armory</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <header>
      <h2>Welcome Back, Soldier.</h2>
      <% if (user.local.email) { %>
        <ul class="userInfo">
          <li><%= user.local.Name %> </li>
          <li><%= user.local.email %></li>
          <li><%= user.local.savedWords.length %> saved words</li>
        </ul>
        <% } %>
    </header>
    <div class="buttons">
      <button type="button" id="genRandSav">See a random saved word</button>
      <button type="button" id="genRand">See a random word from the armory</button>
      <button type="button" id="genSaved">See all the words from the armory</button>
    </div>

    <section>
      <ul class="armory">
        <% for(var i=0; i<words.length; i++) {%>
        <li>
          <span><%= words[i].word %></span>
          <span><%= words[i].def %></span>
          <span><%= words[i].downVote %></span>
          <span><i class="fa fa-thumbs-down"></i></span>
          <span><i class="fa fa-save"></i></span>
        </li>
        <% } %>
      </ul>
    </section>

    <script src="main.js" charset="utf-8"></script>
  </body>
</html>
